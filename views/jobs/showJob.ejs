
<% include ../common/header %>
    <body>
        <div class="col-12" style="padding-top: 10px">
            <div class="row">
                <legend class="text-center"> <i class="fa fa-plus"></i>Job Details</legend>
        
                <form class="form-horizontal" action="/jobs/<%= job._id %>/update" method="POST" style="width: 100%">
                  <fieldset>

                    <!-- Job ID body -->
                    <div class="form-group">
                      <label class="col-md-4">Job ID</label>
                      <div class="col-md-12">
                        <textarea class="form-control" name="job_ID"value="<%= job.job_ID %>" rows="1" ><%= job.job_ID %></textarea>
                      </div>
                    </div>

                    <!-- job location-->
                    <div class="form-group">
                        <label class="col-md-4">Location</label>
                        <div class="col-md-12">
                          <select class="form-control" name="job_location">
                            <option value="<%= job.job_location %>"><%= job.job_location %></option>
                            <option value="Anna Smith Elementary">Anna Smith Elementary</option>
                            <option value="Blue Peak High">Blue Peak High</option>
                            <option value="Bus Garage">Bus Garage</option>
                            <option value="Clarke N Johnsen Junior High">Clarke N Johnsen Junior High</option>
                            <option value="Community Learning Center">Community Learning Center</option>
                            <option value="Copper Canyon Elementary">Copper Canyon Elementary</option>
                            <option value="District Office">District Office</option>
                            <option value="Dugway">Dugway</option>
                            <option value="Early Learning Center">Early Learning Center</option>
                            <option value="Food Service">Food Service</option>
                            <option value="Grantsville Elementary">Grantsville Elementary</option>
                            <option value="Grantsville High">Grantsville High</option>
                            <option value="Grantsville Junior High">Grantsville Junior High</option>
                            <option value="Ibapah Elementary">Ibapah Elementary</option>
                            <option value="Middle Canyon Elementary">Middle Canyon Elementary</option>
                            <option value="North Lake Elementary">North Lake Elementary</option>
                            <option value="Old Mill Elementary">Old Mill Elementary</option>
                            <option value="Overlake Elementary">Overlake Elementary</option>
                            <option value="Rose Springs Elementary">Rose Springs Elementary</option>
                            <option value="Settlement Canyon Elementary">Settlement Canyon Elementary</option>
                            <option value="Shop">Shop</option>
                            <option value="Stansbury High">Stansbury High</option>
                            <option value="Stansbury Park Elementary">Stansbury Park Elementary</option>
                            <option value="Sterling Elementary">Sterling Elementary</option>
                            <option value="Tooele High">Tooele High</option>
                            <option value="Tooele Junior High">Tooele Junior High</option>
                            <option value="Vernon Elementary">Vernon Elementary</option>
                            <option value="Wendover High">Wendover High</option>
                            <option value="West Elementary">West Elementary</option>
                            <option value="Willow Elementary">Willow Elementary</option>
                          </select>
                        </div>
                    </div>
                    
                    <!-- Request body -->
                    <div class="form-group">
                      <label class="col-md-4">Request Description</label>
                      <div class="col-md-12">
                        <textarea class="form-control" name="job_request"value="<%= job.job_request %>" rows="6"><%= job.job_request %></textarea>
                      </div>
                    </div>

                    <!-- Description body -->
                    <div class="form-group">
                        <label class="col-md-4">Details</label>
                        <div class="col-md-12">
                          <textarea class="form-control" name="job_details"value="<%= job.job_details %>" rows="5"><%= job.job_details %></textarea>
                        </div>
                      </div>

                      <!-- Date -->
                    <div class="form-group">
                      <label class="col-md-4">Date Created</label>
                      <div class="col-md-12">
                        <input class="form-control" name="job_create_date"value="<%= job.job_create_date %>" readonly="true"></input>
                      </div>
                    </div>

                    <%if (job.job_update_date !== undefined) { %>
                      <div class="form-group">
                        <label class="col-md-4">Date Last Updated</label>
                        <div class="col-md-12">
                          <input class="form-control" name="job_update_date"value="<%= job.job_update_date %>" readonly="true"></input>
                        </div>
                      </div>
                    <% } %>


                     <!-- Completed yes/no -->
                    <div class="form-group">
                        <label class="col-md-4">Is Complete?</label>
                        <div class="col-md-12">
                            <input type="radio" name="job_status" value="done" 
                            <%if (job.job_status == 'done') { %>
                                checked="checked"
                            <% } %>> Done <br>

                            <input type="radio" name="job_status" value="inProgress" 
                            <%if (job.job_status == 'inProgress') { %>
                                checked="checked"
                            <% } %>> In Progress <br>
                        </div>
                    </div> 
            
                    <!-- Form actions -->
                    <div class="form-group">
                      <div class="col-md-12 text-right">
                        <button type="submit" formmethod="GET" formaction="/jobs/<%= job._id %>/delete" onclick="return myAlert()"><i class="fa fa-trash"></i>Delete</button>
                        <input action="action" onclick="window.history.go(-1); return false;" type="button" value="Back" />
                        <button type="submit" value="execute">Update Job</button>
                      </form>
                      </div>
                    </div>
                  </fieldset>
                </form>
              </div>
            </div>
          </div>
        </div>
<% include ../common/footer %>
  

  