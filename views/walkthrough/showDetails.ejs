
<% include ../common/header %>
<body>
    <div class="col-md-12" style="padding-top: 10px">
        <div class="row">
            <legend class="text-center"> <i class="fa fa-plus"></i>Scaned Item Details</legend>
    
            <form class="form-horizontal" action="/walk/<%= scan._id %>/update" method="POST" style="width: 100%">
              <fieldset>

                <!-- Location body -->
                <div class="form-group">
                    <label class="col-md-4">Location</label>
                    <div class="col-md-12">
                        <textarea class="form-control" name="walk_location"value="<%= scan.walk_location %>" rows="1" readonly="true"><%= scan.walk_location %></textarea>
                    </div>
                </div>
                
                <!-- Description body -->
                <div class="form-group">
                    <label class="col-md-4">Details</label>
                    <div class="col-md-12">
                      <textarea class="form-control" name="walk_details"value="<%= scan.walk_details %>" rows="5" readonly="true"><%= scan.walk_details %></textarea>
                    </div>
                  </div>

                <!-- Date -->
                <div class="form-group">
                  <label class="col-md-4">Date Created</label>
                  <div class="col-md-12">
                    <input class="form-control" name="walk_scan_date"value="<%= scan.walk_scan_date %>" readonly="true"></input>
                  </div>
                </div>

                <!-- Motor Greesed -->
                <div class="form-group">
                    <label class="col-md-4">Motor Greesed?</label>
                    <div class="col-md-12">
                        <input type="radio" name="walk_motor_lubed" value="yes" 
                        <%if (scan.walk_motor_lubed == 'yes') { %>
                            checked="checked"
                        <% } %>> Yes <br>

                        <input type="radio" name="walk_motor_lubed" value="no" 
                        <%if (scan.walk_motor_lubed == 'no') { %>
                            checked="checked"
                        <% } %>> No <br>
                    </div>
                </div>

                <!-- Filter Changed -->
                <div class="form-group">
                    <label class="col-md-4">Filter Changed?</label>
                    <div class="col-md-12">
                        <input type="radio" name="walk_filter_change" value="yes" 
                        <%if (scan.walk_filter_change == 'yes') { %>
                            checked="checked"
                        <% } %>> Yes <br>

                        <input type="radio" name="walk_filter_change" value="no" 
                        <%if (scan.walk_filter_change == 'no') { %>
                            checked="checked"
                        <% } %>> No <br>
                    </div>
                </div> 
        
                <!-- Form actions -->
                <div class="form-group">
                  <div class="col-md-12 text-right">
                    <input action="action" onclick="window.history.go(-1); return false;" type="button" value="Done" />
                  </div>
                </div>
              </fieldset>
            </form>
          </div>
        </div>
      </div>
    </div>
<% include ../common/footer %>


