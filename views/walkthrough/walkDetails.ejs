
<% include ../common/header %>
<body>
    <div class="col-md-12" style="padding-top: 10px">
        <div class="row">
            <legend class="text-center"> <i class="fa fa-plus"></i>Scaned Item Details</legend>
    
            <form class="form-horizontal" action="/walkthrough/walk/<%= scan._id %>/update" method="POST" style="width: 100%">
              <fieldset>

                <!-- Date -->
                <div class="form-group">
                  <label class="col-md-4">Date Created</label>
                  <div class="col-md-12">
                    <input class="form-control" name="date"value="<%= scan.walk_scan_date %>" readonly="true"></input>
                  </div>
                </div>

                <!-- Filters changed -->
                <div class="form-group">
                    <label class="col-md-4">Filters Changed</label>
                    <div class="col-md-12">
                        <input type="radio" name="walk_filter_change" value="yes"> Yes <br>

                        <input type="radio" name="walk_filter_change" value="no" checked="checked"> No <br>
                    </div>
                </div> 


                <!-- Motor Lubed -->
                <div class="form-group">
                    <label class="col-md-4">Motor Gressed?</label>
                    <div class="col-md-12">
                        <input type="radio" name="walk_motor_lubed" value="yes"> Yes <br>

                        <input type="radio" name="walk_motor_lubed" value="no" checked="checked"> No <br>
                    </div>
                </div>

                <!-- Description body -->
                <div class="form-group">
                    <label class="col-md-4">Details</label>
                    <div class="col-md-12">
                        <textarea class="form-control" name="walk_details" placeholder="Note observations about the equipment condition, and detail any work performed on equipment." rows="5" required="required"></textarea>
                    </div>
                </div>
        
                <!-- Form actions -->
                <div class="form-group">
                  <div class="col-md-12 text-right">
                    <button type="submit" value="execute">Add Details</button>
                    <input action="action" onclick="window.history.go(-1); return false;" type="button" value="Back" />
                  </div>
                </div>
              </fieldset>
            </form>
          </div>
        </div>
      </div>
    </div>
<% include ../common/footer %>


